doctype html
html
    head
        title= pageTitle
        block css
            link(rel="stylesheet", href="/app.css")
            link(rel="stylesheet", href="/assets/bootstrap/dist/css/bootstrap.css")
    body(class="container-fluid")
          
        // Barre de navigation
        nav(class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top")
            a(href="" class="navbar-brand") Mes concerts
            
            div(class="collapse navbar-collapse" id="contenuNav")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item")
                        a(class="nav-link" href="/concert/list") Liste des concerts
                    li(class="nav-item")
                        a(class="nav-link" href="/concert/form") Ajouter un concert

        block header
            header(class="entete") 
        
        // Récupération des messages flash à afficher
        - const messages = getMessages()

        // Affichage des messages de type info
        if messages.info
            div(class="alert alert-info alert-dismissible" role="alert")
                each item in messages.info
                    p=item
                button(class="close" data-dismiss="alert") &times;


        // Affichage des messages de type error
        if messages.error
            div(class="alert alert-danger alert-dismissible" role="alert")
                each item in messages.error
                    p=item
                button(class="close" data-dismiss="alert") &times;


        // Début de la page
        div(class="row justify-content-center")
            block content

        script(src="/assets/jquery/dist/jquery.js")
        script(src="/assets/bootstrap/dist/js/bootstrap.js")